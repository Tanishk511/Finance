<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/goals/goals.css">
</head>

<body>

    <div class="budget">
        <div class="budget-title">Welcome <%=data.name%>! Today is <%=dname%></div><button class="popupBtn">Add</button>
        <div class="popupScreen"></div>
        <div class="add-transactions">
            <div class="add-transactions-handle">
                <span>New Goals</span>
                <button class="popoutBtn">-</button>
            </div>
            <form method="post">
                <div>
                    <label for="description">Title</label>
                    <input type="text" name="description" required>
                </div>
                <div>
                    <label for="amount">Amount</label>
                    <input type="number" name="amount" required>
                </div>
                <div>
                    <label for="month">Enter Your Month</label>
                    <input type="text" name="month" required>
                </div>
                <div>
                    <label for="date">Date</label>
                    <input type="date" name="date" required>
                </div>
                <button>Add</button>
            </form>
        </div>
        <div class="budget-manager-body">
            <%for(let i=0;i<data.goalsTracker.length;i++){%>
                <p>
                    <%=Object.keys(data.goalsTracker[i])%>
                </p>
                <p>
                    <%=Object.values(data.goalsTracker[i])%>
                </p>
                <p>
                    <span class="submittedGoal">1</span>/
                    <span class="totalGoal">
                        <%=Object.values(data.goalsCompleteDate)[i]%>
                    </span>
                </p>
                <form action="/main/budget?_method=PUT" method="post">
                    <div class="hide">

                        <input type="number" name="newMonthDate<%=i+1%>"
                            value="<%=parseInt(Object.values(data.goalsCompleteDate)[i])-1%>">

                        <label for="description">Title</label>
                        <input type="text" name="description" value=<%=Object.keys(data.goalsTracker[i])%> >


                        <label for="amount">Amount</label>
                        <input type="number" name="amount" value=<%=Object.values(data.goalsTracker[i])%>>

                        <label for="date">Date</label>
                        <input type="text" name="date" value=<%=data.goalsTrackerDates[i]%> >


                        <label for="nature">Nature</label>
                        <select name="nature" id="nature">
                            <option value="expense">Expense</option>
                        </select>
                    </div>

                    <button class="removeGoal" type="submit">-</button>
                </form>
                <%}%>
        </div>
        <div class="budget-body">
            <%for(let i=0;i<data.goalsTrackerDates.length;i++){%>
                <p>
                    <%=Object.keys(data.goalsTracker[i])%>
                </p>
                <p>
                    <%=Object.values(data.goalsTracker[i])%>
                </p>
                <p>
                    <%= data.goalsTrackerDates[i]%>
                </p>
                <%}%>
        </div>
    </div>

    </div>


    <script src="/goals/goals.js"></script>

</body>

</html>